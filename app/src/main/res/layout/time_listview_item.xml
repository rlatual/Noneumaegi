<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/padding_8dp">

    <TextView
        android:id="@+id/tv_isweek"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:background="@drawable/primcolor_oval"
        android:gravity="center"
        android:text="평"
        android:textColor="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_time1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_8dp"
        android:text="10:00"
        app:layout_constraintBottom_toBottomOf="@id/tv_isweek"
        app:layout_constraintLeft_toRightOf="@id/tv_isweek"
        app:layout_constraintRight_toLeftOf="@id/tv_time3"
        app:layout_constraintTop_toTopOf="@id/tv_isweek" />

    <TextView
        android:id="@+id/tv_time3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="~"
        android:layout_marginLeft="@dimen/margin_8dp"
        app:layout_constraintLeft_toRightOf="@id/tv_time1"
        app:layout_constraintTop_toTopOf="@id/tv_time1" />


    <TextView
        android:id="@+id/tv_time2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_8dp"
        android:text="12:00"
        app:layout_constraintBottom_toBottomOf="@id/tv_isweek"
        app:layout_constraintLeft_toRightOf="@id/tv_time3"
        app:layout_constraintTop_toTopOf="@id/tv_isweek" />

</androidx.constraintlayout.widget.ConstraintLayout>